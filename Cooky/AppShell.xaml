<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Cooky.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="using:Cooky.Views"
    FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Notes"
            Icon="icon_notes.png"
            ContentTemplate="{DataTemplate views:AllRecipesPage}"
            Route="MainPage"/>
        <ShellContent
            Title="About"
            Icon="icon_about.png"
            ContentTemplate="{DataTemplate views:AboutPage}"/>
    </TabBar>

</Shell>

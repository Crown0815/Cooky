<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:presentation="clr-namespace:CookyPresentation.ViewModel;assembly=CookyPresentation"
             x:Class="Cooky.Views.RecipePage" x:DataType="presentation:RecipePage">
    <VerticalStackLayout Spacing="10" Margin="5">
        <Entry
            Placeholder="{Binding TitlePlaceholder}"
            Text="{Binding Title}"/>
        <Editor
            Placeholder="{Binding Placeholder}"
            Text="{Binding Text}"
            HeightRequest="100" />

        <Grid ColumnDefinitions="*,*" ColumnSpacing="4">
            <Button
                Text="{Binding SaveLabel}"
                Command="{x:Static presentation:RecipeCommands.SaveCommand}"
                CommandParameter="{Binding}"/>

            <Button
                Grid.Column="1"
                Text ="{Binding DeleteLabel}"
                Command="{x:Static presentation:RecipeCommands.DeleteCommand}"
                CommandParameter="{Binding}"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>